<div class="container">
<h1>Edit your profil</h1>

<%= form_for @user do |u|%>
	<div class="form-group">
		<label>New first_name</label>
		<%= u.text_field :first_name, class: "form-control"%>
	</div>

	<div class="form-group">
		<label>New last_name</label>
		<%= u.text_field :last_name, class: "form-control"%>
	</div>

	<div class="form-group">
		<label>New email</label>
		<%= u.text_field :email, type: "email", class: "form-control"%>
	</div>

	<div class="form-group">
		<%= u.submit class: "btn btn-info btn-default", value: "update profil"%>
	</div>
<% end %>
</div>